<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coffeeshop.controller.TableController">
   <center>
       <TreeView fx:id="tableTreeView" prefHeight="365.0" prefWidth="480.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
       <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
           <Button fx:id="createButton" onAction="#handleCreateTable" text="Create Table">
            <font>
               <Font size="14.0" />
            </font></Button>
           <Button fx:id="updateButton" onAction="#handleUpdateTable" text="Update Table">
            <font>
               <Font size="14.0" />
            </font></Button>
           <Button fx:id="deleteButton" onAction="#handleDeleteTable" text="Delete Table">
            <font>
               <Font size="14.0" />
            </font></Button>
       </HBox>
   </bottom>
</BorderPane>
